{% set classes = ['user', 'user__teaser'] %}
{% if constant('App\\Entity\\User::STATUS_ACTIVE') != user.status %}
	{% set classes = classes|merge(['disabled']) %}
{% endif %}
<a class="{{ classes|join(' ') }}" href="{{ path('member', {'user_id':user.id}) }}">
	{% include 'contents/user/partials/user--avatar.html.twig' with{'user':user} %}

	<div class="user--infos">
		<div class="user--name">{{ user.name }}</div>
		{% if user.presentation is not empty %}
			<div class="user--presentation">{{ user.presentation }}</div>
		{% endif %}
	</div>
</a>
