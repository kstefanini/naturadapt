<a href="{{ path('member', {'user_id':user.id}) }}" class="user user__in-list" title="{{ user.displayName }}" style="--color: {{ user.displayName|color }}">
	<div class="user--avatar">
		{% if (user.avatar is defined) and user.avatar %}
			<img src="{{ user.avatar.path | imagine_filter('avatar') }}" alt="">
		{% else %}
			<img src="{{ path('member_default_avatar') }}" alt="">
		{% endif %}
	</div>
	<div class="user--infos">
		<div class="user--name">{{ user.displayName }}</div>
		<div class="user--presentation">{{ user.presentation }}</div>
	</div>
	{% if user.site is defined and user.site is not empty %}
		<div class="user--site">{{ user.site.name }}</div>
	{% endif %}
</a>
