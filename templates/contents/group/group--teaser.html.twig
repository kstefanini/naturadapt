<div class="group group__teaser" style="--color: {{ group.name|color }}">
	<div class="group-illustration">

	</div>
	<div class="group-status">
		<span class="group-visibility group-visibility__{{ group.visibility }}"><span>{{ ('pages.group.status.' ~ group.visibility)|trans }}</span></span>
	</div>
	<div class="group-content">
		<h2 class="group-name">
			<a href="{{ path('group_index', {'groupSlug': group.slug}) }}">{{ group.name }}</a>
			{% if user_group_relation.isMember(app.user, group) %}
				<span class="group-membership" title="{{ 'pages.group.is_member'|trans }}">âœ“</span>
			{% endif %}
		</h2>

		<div class="group-description">
			{{ group.description }}
		</div>

		{% include 'components/group/group-members--tiny.html.twig' with {'members':group.members} %}
	</div>
</div>
