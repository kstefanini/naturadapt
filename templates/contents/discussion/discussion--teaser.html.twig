{% set classes = ['discussion', 'discussion__teaser', 'discussions-list--row'] %}
{% set lastMessage = (discussion.messages|reverse).0 %}
<a class="{{ classes|join(' ') }}" href="{{ path('group_discussion_index', {'groupSlug': discussion.usergroup.slug, 'discussionUuid': discussion.uuid}) }}">
	<div>
		<h2 class="h4">{{ discussion.title }}</h2>
		<span class="message--date">{{ 'pages.discussion.view.active'|trans|format(lastMessage.createdAt|ago) }}</span>
	</div>
	<div>
		{{ discussion.messages|length }}
	</div>
	<div>
		<span class="user--name">{{ lastMessage.author.name }}.</span>
		<span class="message--date">{{ lastMessage.createdAt|ago|capitalize }}</span>
	</div>
</a>
